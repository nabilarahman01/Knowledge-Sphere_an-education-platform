@model knowledgeSphere.Models.EnrollStudents
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "EnrollStudents";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
            color: #333;
        }

        h1, h4 {
            text-align: center;
            color: #3498db;
        }

        .navbar {
            background-color: #3498db;
            padding: 15px;
        }

        .navbar-brand {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }

        .container {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"], select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #3498db;
            color: #fff;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #3e9af5;
            }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <a class="navbar-brand" href="Dashboard">knowledgeSphere</a>
    </nav>

    <div class="container">
        <h1>Enroll Students</h1>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form asp-action="EnrollStudents" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="StudentEmail" class="control-label">Student Email:</label>
                        <input type="text" id="StudentEmail" name="StudentEmail" asp-for="StudentEmail" class="form-control" />
                        <span asp-validation-for="StudentEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label">Course:</label>
                        <select id="CourseId" name="CourseId" asp-for="CourseId" class="form-control">
                            <option value="">-- Select Course --</option>
                            @foreach (var course in Model.Courses)
                            {
                                <option value="@course.Value">@course.Text</option>
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TeacherMail" class="control-label">Teacher Email:</label>
                        <input type="text" id="TeacherMail" name="TeacherMail" asp-for="TeacherMail" class="form-control" readonly />
                        <span asp-validation-for="TeacherMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Enroll" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section scripts {
        <!-- Add any scripts if needed -->
    }

</body>
</html>
