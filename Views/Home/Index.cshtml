@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Knowledgesphere</title>

    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        .navbar {
            background-color: #3498db;
            height: 70px;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            margin-right: auto;
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #fff !important;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover,
            .navbar-nav .nav-link:hover {
                color: #2ecc71;
            }

        .navbar-nav .nav-item {
            margin-left: 10px;
        }

        main {
            min-height: 78vh;
        }

        .img-fluid {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .row {
            display: flex;
        }

        .col-md-6 {
            height: 500px;
            overflow: hidden;
        }

        .text-lines {
            margin-top: 20px;
            margin-left: 20px;
            color: #007bff;
            padding-left: 50px;
            font-size: 25px;
        }

            .text-lines p {
                transition: transform 0.3s ease;
            }

                .text-lines p:hover {
                    transform: scale(1.2);
                }

        /* Lower Part Information */
        .lower-part-info {
            margin-top: 20px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
            text-align: center;
        }

        /* Add a new class for the login buttons */
        .login-buttons {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
        <div class="container">
            @Html.ActionLink("Knowledgesphere", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <!-- Remove Student and Teacher login links from the navbar -->
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content("~/pics/hehe.jpg")" alt="Your Image Description" class="img-fluid" />
            </div>

            <div class="col-md-6">
                <div class="text-lines">
                    <p>Welcome to Knowledgesphere</p>
                    <p>Empowering Minds, Enriching Knowledge</p>
                    <p>Explore a World of Learning Opportunities</p>
                    <p>Connect, Learn, and Grow with Us</p>
                    <p>Your Gateway to Knowledge Excellence</p>
                    <p> </p>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center login-buttons">
                        <a href="@Url.Action("StudentLogin", "Home")" class="btn btn-primary">Student Login</a>
                        <a href="@Url.Action("TeacherLogin", "Home")" class="btn btn-success">Teacher Login</a>
                    </div>
                </div>
            </div>


        </div>

        <!-- Example sections -->
        <div class="row">
            <section class="col-md-4" aria-labelledby="gettingStartedTitle">
                <!-- ... -->
            </section>
            <section class="col-md-4" aria-labelledby="librariesTitle">
                <!-- ... -->
            </section>
            <section class="col-md-4" aria-labelledby="hostingTitle">
                <!-- ... -->
            </section>
        </div>

        <!-- Responsive buttons for Student and Teacher login -->
        

        <!-- Lower Part Information -->
        <div class="row">
            <div class="col-md-12 lower-part-info">
                <p>Developed by 3200</p>
                <p>Contact us at <a href="mailto:nabilarahman359@gmail.com">KnowledgeSphere</a></p>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS and Popper.js for Bootstrap functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
