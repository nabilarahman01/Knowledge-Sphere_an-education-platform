@model knowledgeSphere.Models.Teacher

@{
    ViewData["Title"] = "TeacherLogin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('/pics/lel.jpg');
            background-size: cover;
            background-position: center;
            margin: 0;
            /* Add additional background styles as needed */
        }

        .header-container {
            text-align: center;
            background-color: white; /* Solid white background */
            padding: 10px;
            margin-bottom: 20px; /* Added margin at the bottom */
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(173, 216, 230, 0.5); /* Light blue with transparency */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            margin-top: 10px; /* Reduced margin-top */
        }

            .login-container label {
                display: block;
                margin-bottom: 8px; /* Increased margin */
                font-size: 18px; /* Larger font size */
                font-weight: bold; /* Bold font */
            }

            .login-container input[type="text"],
            .login-container input[type="password"],
            .login-container input[type="submit"] {
                width: calc(100% - 20px);
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                background-color: white; /* Solid color background */
            }

            .login-container input[type="submit"] {
                background-color: #3498db;
                color: white;
                cursor: pointer;
                margin-top: 10px; /* Added margin-top to create space */
            }

        h1 {
            text-align: center;
        }

        .navbar {
            margin: 0;
        }

    </style>
</head>
<body>

    <!-- Bootstrap Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">KnowledgeSphere</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/TeacherLogin">Teacher Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/TeacherRegister">Teacher Signup</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Form Section -->
    
            <h1>Teacher Login</h1>
          

        <div class="login-container">
            @{
                if (ViewBag.Message != null)
                {
                    <p style="color:red; text-align: center">@ViewBag.Message</p>
                }
                if (TempData["Success"] != null)
                {
                    <p style="color:green; text-align: center">@TempData["Success"]</p>
                }
            }

            <form asp-action="TeacherLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label for="Email" style="font-size: 18px; font-weight: bold;">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password" style="font-size: 18px; font-weight: bold;">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            <p>
                Don't Have An Account? <a asp-controller="Home" asp-action="TeacherRegister">Register Here</a>
            </p>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
